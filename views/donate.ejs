<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Gestion des boutons de montant
        const amountButtons = document.querySelectorAll('.amount-btn');
        const customAmountInput = document.querySelector('.custom-amount-input');
        const amountInput = document.getElementById('amount');
        
        amountButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Retirer la classe active de tous les boutons
                amountButtons.forEach(btn => btn.classList.remove('active'));
                
                // Ajouter la classe active au bouton cliqué
                this.classList.add('active');
                
                // Mettre à jour le champ caché avec le montant sélectionné
                if (this.classList.contains('custom-amount')) {
                    customAmountInput.style.display = 'block';
                    // Le montant sera mis à jour lors de la soumission du formulaire
                } else {
                    customAmountInput.style.display = 'none';
                    amountInput.value = this.getAttribute('data-amount');
                }
            });
        });
        
        // Validation du formulaire
        const donationForm = document.getElementById('donationForm');
        donationForm.addEventListener('submit', function(e) {
            const customAmountField = document.getElementById('customAmount');
            const customAmountActive = document.querySelector('.amount-btn.custom-amount.active');
            
            // Si le montant personnalisé est actif mais vide
            if (customAmountActive && (!customAmountField.value || customAmountField.value <= 0)) {
                e.preventDefault();
                alert('Veuillez entrer un montant valide.');
                customAmountField.focus();
                return false;
            }
            
            // Si le montant personnalisé est actif, mettre à jour le champ caché
            if (customAmountActive) {
                amountInput.value = customAmountField.value;
            }
            
            return true;
        });
        
        // Scroll vers le formulaire de don
        const scrollToFormBtn = document.querySelector('.scroll-to-form');
        if (scrollToFormBtn) {
            scrollToFormBtn.addEventListener('click', function(e) {
                e.preventDefault();
                const formContainer = document.querySelector('.donation-form-container');
                formContainer.scrollIntoView({ behavior: 'smooth' });
            });
        }
    });
</script> 